<vxml version="2.1" xml:lang="es-ES">

<link next="\MainMenu">
</link>


<form id="MainMenu">
	<block>
		<prompt bargein="false">
			Hola. Me llamo Arandita y soy el asistente conversacional de la UGR.
		</prompt>
		<goto next = "#EscogerSeccion"/>
	</block>
</form>

<form id="EscogerSeccion">

	<field name="seccion_escogida">
		<prompt>
			Que puedo hacer por ti?
		</prompt>
		<grammar src = "secciones.jsgf"/>
	</field>

	<filled>
		<if cond="seccion_escogida == 'bibliotecas'">
			<goto next="#escogidoBiblio"/>
		<elseif cond="seccion_escogida == 'centros'"/>
			<goto next="#escogidoCentros"/>
		<elseif cond="seccion_escogida == 'salir'"/>
			<goto next="#quieroSalir"/>
		</if>
	</filled>
</form>

<form id="escogidoBiblio">
	<block>
		<prompt bargein="false">
			Has preguntado sobre las bibliotecas
		</prompt>
		<goto next="#EscogerSeccion"/>
	</block>
</form>

<form id="escogidoCentros">
	<block>
		<prompt bargein="false">
			Has preguntado sobre centros
		</prompt>
		<goto next="#EscogerSeccion"/>
	</block>

</form>

<form id="quieroSalir">
	<block>
		<prompt bargein="false">
			Hasta luego! Un placer ayudarte
		</prompt>
	</block>
</form>

</vxml>

