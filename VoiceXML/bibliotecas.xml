<vxml version="2.1" xml:lang="es-ES">

<link next="\bibliotecasMenu">
</link>

<form id="bibliotecasMenu">
	<field name="biblioteca">
		<prompt>
			De que grado necesitas informacion?
		</prompt>
		<grammar src="grados.jsgf"/>
	</field>
	<filled>
		<if cond="biblioteca == 'informatica'">
			<goto next="#INFORMATICA"/>
		<elseif cond="biblioteca == 'telecomunicaciones'"/>
			<goto next="#TELECOMUNICACIONESGRADOS"/>
		<elseif cond="biblioteca == 'telecomunicaciones'"/>
			<goto next="#TELECOMUNICACIONES"/>
		<elseif cond="biblioteca == 'magisterio'"/>
			<goto next="#MAGISTERIO"/>
		<elseif cond="biblioteca == 'matematicas'"/>
			<goto next="#MATEMATICAS"/>
		</if>
	</filled>
</form>

<form id="INFORMATICA">
	<block>
		<prompt bargein="false">
			Has dicho informatica
		</prompt>
		<goto next="arandita_main.xml#EscogerSeccion"/>
	</block>
</form>


<form id="TELECOMUNICACIONESGRADOS">
	<block>
		<prompt bargein="false">
			Has dicho teleco y has estado en grados
		</prompt>
		<goto next="arandita_main.xml#EscogerSeccion"/>
	</block>
</form>

