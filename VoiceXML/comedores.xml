<vxml version="2.1" xml:lang="es-ES">

<link next="\gradoMenu">
</link>

<form id="gradoMenu">
	<field name="grado">
		<prompt>
			De que grado necesitas informacion?
		</prompt>
		<grammar src="grados.jsgf"/>
	</field>
	<filled>
		<assign name = "he_estado_grados" expr = "si"/>
		<if cond="grado == 'informatica'">
			<goto next="#INFORMATICA"/>
		<elseif cond="grado == 'telecomunicaciones'"/>
			<goto next="#TELECOMUNICACIONES"/>
		<elseif cond="grado == 'magisterio'"/>
			<goto next="#MAGISTERIO"/>
		<elseif cond="grado == 'matematicas'"/>
			<goto next="#MATEMATICAS"/>
		</if>
	</filled>
</form>

<form id="INFORMATICA">
	<block>
		<prompt bargein="false">
			Has dicho informatica
		</prompt>
		<goto next="arandita_main.xml#EscogerSeccion"/>
	</block>
</form>

<form id="TELECOMUNICACIONES">
	<block>
		<prompt bargein="false">
			Has dicho teleco
		</prompt>
		<goto next="arandita_main.xml#EscogerSeccion"/>
	</block>
</form>

<form id="MATEMATICAS">
	<block>
		<prompt bargein="false">
			Has dicho mates
		</prompt>
		<goto next="arandita_main.xml#EscogerSeccion"/>
	</block>
</form>

<form id="MAGISTERIO">
	<block>
		<prompt bargein="false">
			Has dicho magisterio
		</prompt>
		<goto next="arandita_main.xml#EscogerSeccion"/>
	</block>
</form>

</vxml>
